{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitUseStrict": true,
        "inlineSourceMap": false,
        "lib": [
            "es6",
            "es2015",
            "es2016"
        ],
        "declaration": true,
        "declarationDir": "typings",
        "types": [
            "@fibjs/types"
        ],
        "typeRoots": [
            "typings/index.d.ts"
        ],
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "./src/index.ts",
        "./src/Dialects/index.ts"
    ]
}
